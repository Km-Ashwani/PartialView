@model Products

<div class="card" style="width: 18rem;">
    <img src="@(Model.Image)" asp-append-version="true" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h5 class="card-title">@Model.Price</h5>
        <p class="card-text">@Model.Description,Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">Go View Product</a>
    </div>
</div>